{
  "name": "@r4ai/remark-callout",
  "version": "0.6.2",
  "description": "A remark plugin to add obsidian style callouts to markdown",
  "author": "rai",
  "keywords": [
    "remark",
    "remark-plugin",
    "markdown",
    "callout",
    "info",
    "warning",
    "danger",
    "tip"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r4ai/remark-callout.git"
  },
  "bugs": {
    "url": "https://github.com/r4ai/remark-callout/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "!**/*.test.ts",
    "!**/*.spec.ts",
    "!**/*.tsbuildinfo",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:coverage:ci": "vitest run --coverage",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "release": "bun run vitest run && bun run build && bun run changeset publish"
  },
  "peerDependencies": {},
  "dependencies": {
    "defu": "^6.1.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/bun": "^1.0.8",
    "@types/hast": "^3.0.4",
    "@types/jsdom": "^21.1.6",
    "@types/mdast": "^4.0.3",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "dedent": "^1.5.1",
    "jsdom": "^25.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.4",
    "vfile": "^6.0.1",
    "vitest": "^2.0.0"
  },
  "packageManager": "bun@1.0.30"
}
