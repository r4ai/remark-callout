{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "ignore": ["packages/website"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "**/.turbo",
      "**/node_modules",
      "**/dist",
      "**/coverage",
      "**/.astro",
      "**/.next"
    ]
  }
}
