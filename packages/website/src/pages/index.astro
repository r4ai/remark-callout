---
import BaseLayout from "@/layouts/BaseLayout.astro"
import { Callout } from "@/components/Callout"
---

<BaseLayout route="/">
  <section class="container my-8 flex flex-row items-center justify-between">
    <div class="flex flex-col gap-4">
      <h1 class="text-5xl font-black">@r4ai/remark-callout</h1>
      <p class="text-lg text-muted-foreground">A remark plugin to add obsidian style callouts to markdown</p>
    </div>
    <div>
      <Callout type="note" isFoldable={false} className="max-w-sm">
        <>
          <p>This is a note callout. It's a great way to add a little extra information to your markdown.</p>
        </>
      </Callout>
    </div>
  </section>
</BaseLayout>
