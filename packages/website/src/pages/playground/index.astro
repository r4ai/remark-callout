---
import BaseLayout from "@/layouts/BaseLayout.astro"
import meta from "@/lib/metadata"
import { codeToHtml } from "shiki"
import { Playground } from "./_Playground"
import style from "./_callout.css?raw"

const highlightedCss = await codeToHtml(style, {
  lang: "css",
  themes: {
    light: "github-light",
    dark: "one-dark-pro",
  },
})
---

<BaseLayout activeSlug="/playground" title={`Playground | ${meta.name}`}>
  <Playground highlightedCss={highlightedCss} client:only="react" />
</BaseLayout>
