    "@tsconfig/node16": "^16.1.3",
    "@types/bun": "^1.0.8",
    "@types/lint-staged": "^13.3.0",
    "@vitest/coverage-istanbul": "^1.5.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "turbo": "^1.12.5",
    "typescript": "^5.0.0"
  },
  "packageManager": "bun@1.0.30",
  "dependencies": {
    "@astrojs/mdx": "3.0.0",
    "@astrojs/react": "3.3.4",
    "@radix-ui/react-icons": "^1.3.0",
    "astro": "4.8.2",
    "class-variance-authority": "^0.7.0",
