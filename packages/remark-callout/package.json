{
  "name": "@r4ai/remark-callout",
  "version": "0.6.2",
  "description": "A remark plugin to add obsidian style callouts to markdown",
  "author": "rai",
  "keywords": [
    "remark",
    "remark-plugin",
    "markdown",
    "callout",
    "info",
    "warning",
    "danger",
    "tip"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r4ai/remark-callout.git"
  },
  "bugs": {
    "url": "https://github.com/r4ai/remark-callout/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "!**/*.test.ts",
    "!**/*.spec.ts",
    "!**/*.tsbuildinfo",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:coverage:ci": "vitest run --coverage",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "release": "bun run vitest run && bun run build && bun run changeset publish"
  },
  "peerDependencies": {},
  "dependencies": {
    "defu": "^6.1.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.6",
    "@types/bun": "1.2.21",
    "@types/hast": "3.0.4",
    "@types/jsdom": "21.1.7",
    "@types/mdast": "4.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "dedent": "1.6.0",
    "jsdom": "26.1.0",
    "rehype-raw": "7.0.0",
    "rehype-stringify": "10.0.1",
    "remark-gfm": "4.0.1",
    "remark-math": "6.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "rimraf": "6.0.1",
    "typescript": "5.9.2",
    "unified": "11.0.5",
    "vfile": "6.0.3",
    "vitest": "3.2.4"
  },
  "packageManager": "bun@1.0.30"
}
