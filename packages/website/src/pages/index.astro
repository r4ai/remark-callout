---
import { Callout } from "@/components/Callout"
import CodeBlock from "@/components/CodeBlock.astro"
import { FeatureCard } from "@/components/FeatureCard"
import { InlineMath } from "@/components/Math"
import BaseLayout from "@/layouts/BaseLayout.astro"
import meta from "@/lib/metadata"
import { PaintbrushIcon, Settings2Icon } from "lucide-react"
---

<BaseLayout activeSlug="/" title={meta.name}>
  <section class="container my-8 flex grow flex-col items-center justify-between gap-12 lg:flex-row">
    <div class="flex w-full max-w-screen-md flex-col gap-6">
      <h1 class="mx-auto flex flex-col space-x-0 text-4xl font-black sm:flex-row md:text-6xl lg:mx-0 lg:flex-col">
        <div>@r4ai/</div>
        <div>remark-callout</div>
      </h1>
      <p class="mx-auto text-muted-foreground sm:text-lg lg:mx-0 lg:text-xl">{meta.description}</p>
      <div class="mx-auto mt-4 flex flex-row flex-wrap justify-center gap-4 lg:mx-0 lg:justify-start">
        <FeatureCard title="Headless">
          <PaintbrushIcon slot="icon" className="m-auto size-6" />
          <p>You can style the callouts however you want.</p>
        </FeatureCard>
        <FeatureCard title="Customizable">
          <Settings2Icon slot="icon" className="m-auto size-6" />
          <p>You can customize the structure of the Callout output HTML</p>
        </FeatureCard>
      </div>
    </div>
    <div class="flex w-full max-w-2xl grow flex-col items-center gap-6">
      <h2 class="text-2xl font-bold lg:hidden">Examples</h2>
      <Callout
        type="note"
        isFoldable={false}
        className="w-full max-w-md shadow-2xl shadow-zinc-300 dark:shadow-blue-900/30 lg:self-start"
        client:visible
      >
        <p>This is a note callout. It's a great way to add a little extra information to your markdown.</p>
        <p class="mt-4">You can do this with following syntax:</p>
        <CodeBlock
          className="my-2"
          code={[
            "> [!note]",
            "> This is a note callout. It's a great way to add a little extra information to your markdown.",
          ].join("\n")}
          ,
          lang="markdown"
        />
      </Callout>
      <Callout
        type="theorem"
        isFoldable={true}
        defaultFolded
        className="w-full max-w-md shadow-2xl shadow-purple-300 dark:shadow-purple-900/30 sm:w-[28rem] lg:self-end"
        client:visible
      >
        <div slot="title" class="space-x-1 font-serif">
          <em>Theorem</em>
          <span>1.1.2</span>
        </div>
        <sl>
          <p>
            Let <InlineMath tex="(\\Omega, \\mathcal{F}, \\mu)" /> be a measure space.
          </p>
          <p class="my-6">
            Let <InlineMath tex="A, B, A_{1}, A_{2}, \\cdots \\in \\mathcal{F}" />. Then, the following holds:
          </p>
          <ol class="mb-2 ml-6 mt-6 list-decimal">
            <li>
              <InlineMath tex="\\mu" /> is additive.
            </li>
            <li class="mt-2">
              <InlineMath
                tex="\\displaystyle A_{n} \\uparrow \\implies \\mu \\left( \\bigcup_{i=1}^{\\infty} A_{i} \\right) = \\lim_{ n \\to \\infty } \\mu(A_{n})"
              />
            </li>
            <li class="mt-4">
              <InlineMath
                tex="[~A_{n} \\downarrow ~ \\land ~~ \\exists n \\in \\mathbb{N};\\ \\mu(A_{n}) < +\\infty ~]"
              />
              <br />
              <InlineMath
                tex="\\implies \\mu \\left( \\bigcap_{n=1}^{\\infty}A_{n} \\right) = \\lim_{ n \\to \\infty }\\mu(A_{n})"
              />
            </li>
            <li class="mt-4">
              <InlineMath
                tex="\\displaystyle\\mu \\left( \\bigcup_{n=1}^{\\infty} A_{n} \\right) \\leq \\sum_{n=1}^{\\infty}\\mu(A_{n})"
              />
            </li>
          </ol>
        </sl>
      </Callout>
    </div>
  </section>
</BaseLayout>
